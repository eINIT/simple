<module>
 <v-sm-notify
  name="NSM Reboot Notifier (sm-notify)"
  provides="sm-notify"
  requires="portmap:rpc.statd" >
 
  <execute id="daemon" code="sm-notify" />

  <pidfile s="/var/run/sm-notify.pid">
  <need-files s="sm-notify" />
  <restart b="yes" />
  <options s="forking" />
 </v-sm-notify>
</module>
