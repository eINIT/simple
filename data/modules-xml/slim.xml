<module>
 <v-slim
  name="Simple LogIn Manager (slim)"
  provides="x11:displaymanager">

  <execute id="prepare" code="rm -rf /var/run/slim.*" />
  <execute id="daemon" code="slim -d" />

  <restart b="yes" />
  <options s="forking" />
  <pidfile s="/var/run/slim.lock" />
  <need-files s="slim:X:/tmp/." />
 </v-slim>
</module>
