<module>
 <v-rpc.statd
  name="NSM Status Monitor (rpc.statd)"
  provides="rpc.statd"
  requires="portmap" >
 
  <execute id="prepare" code="killall -q -0 /sbin/rpc.statd; true" />

  <execute id="daemon" code="rpc.statd -F -L ${configuration_services_statd_options}" />

  <need-files s="rpc.statd" />
  <restart b="yes" />
  <variables s="configuration-services-statd/.*" />
 </v-rpc.statd>
</module>
